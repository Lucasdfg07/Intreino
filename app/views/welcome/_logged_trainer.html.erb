<section class="row">
	<section class="col s12 center-align trainer_card">
		<section class="card">
			<section class="card-title">
				<h3>Bem Vindo ao <b>INTREINO</b></h3>
			</section>

			<section class="card-content">
				<hr>

				Você está na <b><%= current_trainer.get_position %>ª</b> posição dos melhores treinadores de <%= current_trainer.city.name %>.
				
				<hr>

				<!-- Graphic -->
				<h5>Gráfico da quantidade de pessoas que se tornam alunos</h5>
				<%= content_tag :div, "", id: "pupils_chart", data: {pupils: pupils_data} %>

				<br />

				<script>
					new Morris.Bar({
					    element: 'pupils_chart',
					    data: $('#pupils_chart').data('pupils'),
					    xkey: 'created_at',
					    ykeys: ['pupil'],
					    labels: ['Alunos'],
					    lineColors: ['#007bff']
					  });
				</script>

				<h4>Solicitações Pendentes <%= image_tag 'invite', class: 'invite' %></h4>
				
				<hr>

				<% current_trainer.solicitations.each do |solicitation| %>
					<section class="row center-align trainer_div">
						<section class="col s2">
							<%= image_tag solicitation.pupil.profile_image, class: 'thumb circle' %>
						</section>

						<section class="col s10">
							<%= solicitation.pupil.name %> solicitou treinamento online!

							<br />

							<section class="row">
								<section class="col s6">
									<%= link_to 'Confirmar', new_pupil_trainer_path(pupil: solicitation.pupil, solicitation: solicitation), class: 'btn waves-effect waves-light green' %>
								</section>

								<section class="col s6">
									<%= link_to 'Remover', solicitations_path(id: solicitation), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn waves-effect waves-light red col s6' %>
								</section>
							</section>
						</section>
					</section>	
				<% end %>

				<% if current_trainer.solicitations.count == 0 %>
					<p>
						Não existem solicitações pendentes!
					</p>
					<hr />
				<% end %>
			</section>
		</section>
	</section>
</section>