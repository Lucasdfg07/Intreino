<section class="card">
  <section class="card-title center-align">
    <h2>Cadastro de aluno</h2>
  </section>

  <section class="card-content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :Informe_sua_cidade %><br />
        <%= f.collection_select :city, City.order(name: :ASC), :id, :name, {include_blank: 'Selecione sua Cidade'}, class: "browser-default", required: true %>
      </div>

      <script>
        $( "#pupil_city_id" ).select2({
            placeholder: 'Pesquise por uma cidade'
        });
      </script>

      <br />

      <div class="field">
        <%= f.label :nome %><br />
        <%= f.text_field :name, placeholder: 'Digite seu Nome', required: true %>
      </div>

      <div class="field">
        <%= f.label :idade %><br />
        <%= f.number_field :age, placeholder: 'Digite sua Idade', required: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
      </div>

      <div class="field">
        <%= f.label :senha %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", required: true %>
      </div>

      <div class="field">
        <%= f.label :confirmação_de_senha %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
      </div>

      <div class="field">
        <%= f.label :telefone %><br />
        <%= f.number_field :telephone, placeholder: '99 99999999', required: true %>
        <small>Formato: DDD+Telefone. Exemplo: 22997989692</small> <br />
        <small>Essa informação será utilizada para disponibilizar o link para o personal entrar em contato com o aluno pelo whatsapp</small>
      </div>

      <div class="field">
        <%= f.label :foto_de_perfil %><br />
        <%= f.file_field :photo %>
      </div>

      <br />

      <div class="actions center-align">
        <%= f.submit "Salvar", class: 'waves-light waves-effect red btn' %>
      </div>
    <% end %>
  </section>
</section>

<%= link_to 'Voltar', new_pupil_session_path, class: 'btn waves-effect waves-light' %>
