<section class="card">
  <section class="card-title center-align">
    <h2>Cadastro de personal</h2>
  </section>

  <section class="card-content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nome %>*<br />
        <%= f.text_field :name, required: true %>
      </div>

      <div class="field">
        <%= f.label :email %>*<br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
      </div>

      <div class="field">
        <%= f.label :senha %>*
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", required: true %>
      </div>

      <div class="field">
        <%= f.label :confirmação_de_senha %>*<br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
      </div>

      <div class="field">
        <%= f.label :CREF %>*<br />
        <%= f.text_field :cref, required: true %>
      </div>

      <div class="field">
        <%= f.label :telefone %><br />
        <%= f.number_field :telephone, required: true %>
        <small>Formato: DDD+Telefone. Exemplo: 22997989692</small> <br />
        <small>Essa informação será utilizada para disponibilizar o link para o personal entrar em contato com o aluno pelo whatsapp</small>
      </div>

      <div class="field">
        <%= f.label :link_do_facebook %><br />
        <%= f.text_field :facebook %>
      </div>

      <div class="field">
        <%= f.label :link_do_instagram %><br />
        <%= f.text_field :instagram %>
      </div>

      <div class="field">
        <%= f.label :foto_de_perfil %><br />
        <%= f.file_field :photo %>
      </div>

      <div class="actions center-align">
        <%= f.submit 'Salvar', class: 'btn waves-effect waves-light red' %>
      </div>
    <% end %>
  </section>
</section>

<%= link_to 'Voltar', new_trainer_session_path, class: 'btn waves-effect waves-light' %>
