<section class="row center-align card">
	<section class="col s4">
		<h6>Meus Treinos</h6>
		<hr />
	</section>

	<section class="col s12">
		<% current_pupil.trains.order(created_at: :ASC).each do |train| %>
			<section class="col s3">
				<%= image_tag train.get_photo, class: 'thumb' %>
			</section>

			<section class="col s7">
				Modalidade: <b><%= train.modality %></b> <br />
				Treinador: <%= train.trainer.name %><br />
				<small>Data de lançamento: <%= train.created_at %></small>
				<small>Validade até <b><%= train.validate_date %></b></small>
			</section>

			<section class="col s2">
				<%= link_to 'Ver Mais', train_path(train), class: 'btn waves-effect waves-light red' %>
			</section>
		<% end %>
	</section>
</section>